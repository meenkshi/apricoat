<section class="media-with-text desktop-version">   
   <div class="media-row" style="background-color:{{ section.settings.bg_color}} ; ">
    <div class="media-image" style="background-image: url({{section.settings.image  | img_url: '1020x' }});"></div>
    <div class="media-content">
        <div class="media-heading">
        <h2 style="color:{{ section.settings.f_color}}; font-size: {{ section.settings.f_size }}px;" >{{ section.settings.Heading | escape }}</h2>
        <div class="desc" style="color:{{ section.settings.f_color}} ;font-size: {{ section.settings.f_size2 }}px;">{{ section.settings.text}}<img src="{{ section.settings.star | img_url: '150x' }}"></div>
        </div>
        <div class="icon-links">
            <ul>
            {% for block in section.blocks %}
               <li><img src="{{ block.settings.icon | img_url: '70x70' }}"><span style="color:{{ section.settings.f_color}} ;">{{ block.settings.icon_name }}</span></li>
            {%- endfor -%}
            </ul>
        </div>
 {%- if section.settings.link_url != blank -%}
        <div class="media-btn">
         <a href="{{ section.settings.link_url}}" class="btn">{{ section.settings.link_title}}</a>
        </div>
  {%- endif -%}        
    </div>
   </div>
</section>
<section class="media-with-text mobile-version">   
   <div class="media-row" >   
    <div class="media-content" style="background-image: url({{section.settings.image  | img_url: '1020x' }});">
        <div class="media-heading">
        <h2 style="color:{{ section.settings.f_color}}; font-size: {{ section.settings.f_size }}px;">{{ section.settings.Heading | escape }}</h2>
        <div class="desc" style="color:{{ section.settings.f_color}} ;font-size: {{ section.settings.f_size2 }}px;">{{ section.settings.text}}<img src="{{ section.settings.star | img_url: '150x' }}"></div>
        </div>
        <div class="icon-links">
            <ul>
            {% for block in section.blocks %}
               <li><img src="{{ block.settings.icon | img_url: '70x70' }}"><span style="color:{{ section.settings.f_color}} ;">{{ block.settings.icon_name }}</span></li>
            {%- endfor -%}
            </ul>
        </div>
 {%- if section.settings.link_url != blank -%}
        <div class="media-btn">
         <a href="{{ section.settings.link_url}}" class="btn">{{ section.settings.link_title}}</a>
        </div>
  {%- endif -%}        
    </div>
   </div>
</section>
<style>
.mobile-version{
   display: none;
}
.media-content h2{

  {%- if section.settings.font_family == 'basiccommercial_lt_lightRg' -%}
      font-family: 'basiccommercial_lt_lightRg';
    {% endif %}
  {%- if section.settings.font_family == 'basiccommercial_lt_romanRg' -%}
      font-family: 'basiccommercial_lt_romanRg';
    {% endif %}
  {%- if section.settings.font_family == 'literaheavy' -%}
      font-family: 'literaheavy';
  {% endif %}
}
.media-content .desc{
  {%- if section.settings.font_family2 == 'basiccommercial_lt_lightRg' -%}
      font-family: 'basiccommercial_lt_lightRg';
    {% endif %}
  {%- if section.settings.font_family2 == 'basiccommercial_lt_romanRg' -%}
      font-family: 'basiccommercial_lt_romanRg';
    {% endif %}
  {%- if section.settings.font_family2 == 'literaheavy' -%}
      font-family: 'literaheavy';
  {% endif %}
}
@media screen and (max-width: 991px){
.desktop-version{
   display: none;
}
.mobile-version{
   display: block;
}
}
</style>

{% schema %}
{
   "name": "Media With Text or Icons",
   "class": "media-icons",
   "settings": [
      {
         "type": "color",
         "id": "bg_color",
         "label": "Add BackGround Color",
         "default": "#222",
         "info": "Add Section BackGround Color"
      },
       {
         "type": "color",
         "id": "f_color",
         "label": "Add Font Color",
         "default": "#ddd"
      },
      {
          "type": "select",
          "id": "font_family",
          "label": "Choose Font",
          "options": [
            {
              "value": "basiccommercial_lt_lightRg",
              "label": "Basic Commercial Light"
            },
            {
              "value": "basiccommercial_lt_romanRg",
              "label": "Basic Commercial Roman"
            },
            {
              "value": "literaheavy",
              "label": "Litera"
            }
          ],
          "default": "basiccommercial_lt_lightRg"
        },
      {
         "type": "range",
         "id": "f_size",
         "default": 80,
         "min": 18,
         "max": 100,
         "unit": "px",
         "label": "Heading Font Size"
      },
        {
        "type": "text",
        "id": "Heading",
        "label": "Add Heading"    
        },     
        {
        "type": "text",
        "id": "text",
        "label": "Sub Heading"
      },
      {
          "type": "select",
          "id": "font_family2",
          "label": "Choose Font",
          "options": [
            {
              "value": "basiccommercial_lt_lightRg",
              "label": "Basic Commercial Light"
            },
            {
              "value": "basiccommercial_lt_romanRg",
              "label": "Basic Commercial Roman"
            },
            {
              "value": "literaheavy",
              "label": "Litera"
            }
          ],
          "default": "basiccommercial_lt_lightRg"
        },
      {
         "type": "range",
         "id": "f_size2",
         "default": 80,
         "min": 18,
         "max": 100,
         "unit": "px",
         "label": "SubHeading Font Size"
      },
      {
        "type": "image_picker",
        "id": "star",
        "label": "Add Star Image"
        },
        {
        "type": "image_picker",
        "id": "image",
        "label": "Background Image"
        }
        ,{
         "type": "header",
         "content": "Add Button Title Or Link"        
        },
          {
        "type": "text",
        "id": "link_title",
        "label": "Button Title"
      },
      {
         "type": "url",
         "id": "link_url",
         "label": "Add Button Link"
      }
   ],
   "blocks":[
      {
        "type": "image",
        "name": "Add icon and text",
        "settings": [         
          {
        "type": "image_picker",
        "id": "icon",
        "label": "Add Icon"
        },
        {
         "type": "text",
         "id": "icon_name",
         "label": "Add Title"    
        }
        ]
      }
    ],
   "presets": [
   {
      "name": "Media With Text or Icons"
   }]
}
{% endschema %}