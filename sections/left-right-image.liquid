  {{ 'left-right-image.css' | asset_url | stylesheet_tag: preload: true }}

<section class="image-with-text" style="background-color:{{ section.settings.bg_color}} ;">   
<div class="page-width">
 {%- if section.settings.image_alignment == 'left' -%}
   <div class="image-row" >    
          <div class="image-image">
            {%- if section.settings.image != blank -%}
            <img src=" {{section.settings.image  | img_url: '1020x' }});">
            {%- endif -%}      
         </div>
         <div class="image-content">
                     <div class="image-heading">
                           <h2>{{ section.settings.Heading | escape }}</h2>
                           <div class="desc">{{ section.settings.text}}</div>
                           <div class="desc">{{ section.settings.text2}}</div>

                     </div>        
                     {%- if section.settings.link_url != blank -%}
                           <div class="image-btn">
                              <a href="{{ section.settings.link_url}}" class="btn">{{ section.settings.link_title}}</a>
                           </div>
                     {%- endif -%}        
         </div>         
   </div>
     {%- endif -%}  

    {%- if section.settings.image_alignment == 'right' -%}
   <div class="image-row" >    
         <div class="image-content">
                     <div class="image-heading">
                           <h2>{{ section.settings.Heading | escape }}</h2>
                           <div class="desc">{{ section.settings.text}}</div>
                            <div class="desc">{{ section.settings.text2}}</div>
                     </div>        
                     {%- if section.settings.link_url != blank -%}
                           <div class="image-btn">
                              <a href="{{ section.settings.link_url}}" class="btn">{{ section.settings.link_title}}</a>
                           </div>
                     {%- endif -%}        
         </div>
         <div class="image-image">
            {%- if section.settings.image != blank -%}
            <img src=" {{section.settings.image  | img_url: '1020x' }});" class="desk-image">
            <img src=" {{section.settings.image2  | img_url: '1020x' }});" class="mob-image">
            {%- endif -%}      
         </div>
   </div>
  {%- endif -%}      
</div>
</section>
  <style>
 .image-with-text .image-heading h2{
  font-size: {{ section.settings.f_size }}px;
 color:{{ section.settings.f_color }} ;
  {%- if section.settings.font_family == 'basiccommercial_lt_lightRg' -%}
      font-family: 'basiccommercial_lt_lightRg';
    {% endif %}
  {%- if section.settings.font_family == 'basiccommercial_lt_romanRg' -%}
      font-family: 'basiccommercial_lt_romanRg';
    {% endif %}
  {%- if section.settings.font_family == 'literaheavy' -%}
      font-family: 'literaheavy';
  {% endif %}
}
 .image-with-text .image-heading .desc{
  font-size: {{ section.settings.f_size2 }}px;
 color:{{ section.settings.f_color2 }} ;
  {%- if section.settings.font_family2 == 'basiccommercial_lt_lightRg' -%}
      font-family: 'basiccommercial_lt_lightRg';
    {% endif %}
  {%- if section.settings.font_family2 == 'basiccommercial_lt_romanRg' -%}
      font-family: 'basiccommercial_lt_romanRg';
    {% endif %}
  {%- if section.settings.font_family2 == 'literaheavy' -%}
      font-family: 'literaheavy';
  {% endif %}
}

@media screen and (max-width: 767px) {
  .image-with-text .image-btn a {
    width: 82%;
}
}
  </style>
{% schema %}
{
   "name": "left Or Right Image",
   "class": "left-right-image",
   "settings": [
      {
         "type": "color",
         "id": "bg_color",
         "label": "Add BackGround Color",
         "default": "#222",
         "info": "Add Section BackGround Color"
      },
      {
         "type": "color",
         "id": "f_color",
         "label": "Add Heading Font Color",
         "default": "#ddd"
      },
      {
          "type": "select",
          "id": "font_family",
          "label": "Choose Heading Font",
          "options": [
            {
              "value": "basiccommercial_lt_lightRg",
              "label": "Basic Commercial Light"
            },
            {
              "value": "basiccommercial_lt_romanRg",
              "label": "Basic Commercial Roman"
            },
            {
              "value": "literaheavy",
              "label": "Litera"
            }
          ],
          "default": "basiccommercial_lt_lightRg"
        },
      {
         "type": "range",
         "id": "f_size",
         "default": 80,
         "min": 18,
         "max": 100,
         "unit": "px",
         "label": "Heading Font Size"
      },
        {
        "type": "text",
        "id": "Heading",
        "label": "Add Heading"    
        },     
        {
        "type": "html",
        "id": "text",
        "label": "Sub Heading"
      },
       {
        "type": "html",
        "id": "text2",
        "label": "Sub Heading Counter"
      }, 
      {
         "type": "color",
         "id": "f_color2",
         "label": "Add Subheading Font Color",
         "default": "#ddd"
      },
      {
          "type": "select",
          "id": "font_family2",
          "label": "Choose Subheading Font",
          "options": [
            {
              "value": "basiccommercial_lt_lightRg",
              "label": "Basic Commercial Light"
            },
            {
              "value": "basiccommercial_lt_romanRg",
              "label": "Basic Commercial Roman"
            },
            {
              "value": "literaheavy",
              "label": "Litera"
            }
          ],
          "default": "basiccommercial_lt_lightRg"
        },
      {
         "type": "range",
         "id": "f_size2",
         "default": 80,
         "min": 18,
         "max": 100,
         "unit": "px",
         "label": "Subheading Font Size"
      },  
            {
      "type": "select",
      "id": "image_alignment",
      "label": "Image alignment",
      "options": [
         {
            "value": "left",
            "label": "Left"
         },
         {
            "value": "right",
            "label": "Right"
         }
      ],
      "default": "left"
      },
         
        {
        "type": "image_picker",
        "id": "image",
        "label": "Add Image"
        },
        {
        "type": "image_picker",
        "id": "image2",
        "label": "Add Mobile Image"
        }
        ,{
         "type": "header",
         "content": "Add Button Title Or Link"        
        },
          {
        "type": "text",
        "id": "link_title",
        "label": "Button Title"
      },
      {
         "type": "url",
         "id": "link_url",
         "label": "Add Button Link"
      }
   ],
   "presets": [
   {
      "name": "left Or Right Image"
   }]
}
{% endschema %}
