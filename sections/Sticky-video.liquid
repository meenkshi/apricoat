<section class="sticky_video {{ section.settings.unique_class }}">
  <div class="video_wrapper">
    <video width="100%" height="909" autoplay loop muted playsinlin class="desktop_YVvideo">
      <source src="{{ section.settings.desktop_video }}" type="video/mp4">
    </video>
    <video width="100%" autoplay loop muted playsinlin class="mobile_YVvideo">
      <source src="{{ section.settings.mobile_video }}" type="video/mp4">
    </video>
    <div class="content">
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.description %}
        <p>{{ section.settings.description }}</p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Sticky Video",
  "tag": "section",
  "class": "section",
  "settings": [
        {
          "type": "text",
          "id": "unique_class",
          "label": "Don't remove below text"
        },
        {
          "type": "url",
          "id": "desktop_video",
          "label": "Desktop Video Link"
        },
        {
          "type": "url",
          "id": "mobile_video",
          "label": "Mobile Video Link"
        },
    {
      "type":"text",
      "id":"heading",
      "label":"Enter Title"
    },
    {
      "type":"text",
      "id":"description",
      "label":"Enter Description"
    }

  ],
  "presets": [
    {
      "name": "Sticky Video"
    }
  ]
}
{% endschema %}

<style>
  /*        .desktop_YVvideo{
           object-fit:fill;
         } */
          .sticky_video .content h2 {
          font-weight: 800;
          font-size: 48px;
          line-height: 55px;
          color: #FFFFFF;
          margin-bottom: 12px;
          font-family: literaheavy;
      }
         .sticky_video .content p {
          font-weight: 400;
          font-size: 36px;
          line-height:45px;
           color:#fff;
           margin-bottom:0;
          font-family: basiccommercial_lt_lightRg!important;
    }

         .sticky_video .video_wrapper{
           position:relative;
           line-height:0;
         }
        .sticky_video .content {
          position: absolute;
          top: 0;
          bottom: auto;
          left: 0;
          right: auto;
          transform: translate(270px, 341px);
        }
   .mobile_YVvideo{display:none;}
  
/*  About Us  */
.about-sticky-video .desktop_YVvideo {
    height: 455px;
    object-fit: cover;
}
  @media(max-width:1365px){
    .desktop_YVvideo{height:100%;}
    .sticky_video .content{top:50%;left:50%;transform: translate(-50%, -50%);}
    .sticky_video .content p br{display:none;}
  }
  @media(max-width:991px){
    .sticky_video .content h2{font-size:32px;line-height:37px;text-align:center;margin-bottom:5px;}
    .sticky_video .content p{font-size:20px;line-height:25px;text-align:center;}
    .sticky_video .content{width:100%;}
  }
    @media(max-width:480px){
      .desktop_YVvideo{display:none;}
      .mobile_YVvideo{display:block;height:772px;}
      .sticky_video .content{padding:0 15px;}
      .sticky_video .content{top:auto;bottom:0;left:50%;transform: translate(-50%, -194px);}
      .about-sticky-video .mobile_YVvideo{height:100%; object-fit: cover;}
      
    }
</style>
