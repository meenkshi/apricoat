            },
            {
              "value": "basiccommercial_lt_romanRg",
              "label": "Basic Commercial Roman"
            },
            {
              "value": "literaheavy",
              "label": "Litera"
            }
          ],
          "default": "basiccommercial_lt_lightRg"
        },
      {
         "type": "range",
         "id": "f_size",
         "default": 80,
         "min": 18,
         "max": 100,
         "unit": "px",
         "label": "Heading Font Size"
      },
      
        {
        "type": "text",
        "id": "Heading",
        "label": "Add Heading"    
        },     

         {
          "type": "select",
          "id": "font_family2",
          "label": "Choose SubHeading Font",
          "options": [
            {
              "value": "basiccommercial_lt_lightRg",
              "label": "Basic Commercial Light"
            },
            {
              "value": "basiccommercial_lt_romanRg",
              "label": "Basic Commercial Roman"
            },
            {
              "value": "literaheavy",
              "label": "Litera"
            }
          ],
          "default": "basiccommercial_lt_lightRg"
        },
      {
         "type": "range",
         "id": "f_size2",
         "default": 80,
         "min": 18,
         "max": 100,
         "unit": "px",
         "label": "SubHeading Font Size"
      },
     
        {
        "type": "html",
        "id": "text",
        "label": "Sub Heading"
      },   
            {
      "type": "select",
      "id": "image_alignment",
      "label": "Image alignment",
      "options": [
         {
            "value": "left",
            "label": "Left"
         },
         {
            "value": "right",
            "label": "Right"
         }
      ],
      "default": "left"
      },
         
        {
        "type": "image_picker",
        "id": "image",
        "label": "Add Image"
        },        
        {
         "type": "header",
         "content": "Add Button Title Or Link"        
        },
          {
        "type": "text",
        "id": "link_title",
        "label": "Button Title"
      },
      {
         "type": "url",
         "id": "link_url",
         "label": "Add Button Link"
      }
   ],
   "presets": [
   {
      "name": "left Or Right Content"
   }]
}
{% endschema %}