
<section class="icon-info" style="background-color:{{ section.settings.bg_color }} ;">
      <div class="icon-row">         
            {% for block in section.blocks %}
               <div class="image-box">
               <div class="icons"><img src="{{ block.settings.icon | img_url: '70x70' }}"></div>
               <div class="icon-desc">
               <h6>{{ block.settings.icon_name }}</h6>
               <span style="color: {{section.settings.f_color}};">{{ block.settings.icon_name2 }}</span>
               </div>

               
               </div>
            {%- endfor -%}          
      </div>
</section>

<style>
.mobile-version{
   display: none;
}
.icon-desc h6{
 font-size: {{section.settings.f_size}};
 color: {{section.settings.f_color}} ;
  {%- if section.settings.font_family == 'basiccommercial_lt_lightRg' -%}
      font-family: 'basiccommercial_lt_lightRg';
    {% endif %}
  {%- if section.settings.font_family == 'basiccommercial_lt_romanRg' -%}
      font-family: 'basiccommercial_lt_romanRg';
    {% endif %}
  {%- if section.settings.font_family == 'literaheavy' -%}
      font-family: 'literaheavy';
  {% endif %}
}


</style>
{% schema %}
{
   "name": "icon with Information",
    "max_blocks": 4,
   "class": "icon-inforamtion",
   "settings": [
      {
         "type": "color",
         "id": "bg_color",
         "label": "Add BackGround Color",
         "default": "#222",
         "info": "Add Section BackGround Color"
      },
       {
         "type": "color",
         "id": "f_color",
         "label": "Add Font Color",
         "default": "#ddd"
      },
      {
          "type": "select",
          "id": "font_family",
          "label": "Choose Font",
          "options": [
            {
              "value": "basiccommercial_lt_lightRg",
              "label": "Basic Commercial Light"
            },
            {
              "value": "basiccommercial_lt_romanRg",
              "label": "Basic Commercial Roman"
            },
            {
              "value": "literaheavy",
              "label": "Litera"
            }
          ],
          "default": "basiccommercial_lt_lightRg"
        },
      {
         "type": "range",
         "id": "f_size",
         "default": 80,
         "min": 18,
         "max": 100,
         "unit": "px",
         "label": "Heading Font Size"
      }
   ],
   "blocks":[
      {
        "type": "image",
        "name": "Add icon and Title",
        "settings": [         
          {
        "type": "image_picker",
        "id": "icon",
        "label": "Add Icon"
        },
        {
         "type": "text",
         "id": "icon_name",
         "label": "Add Title"    
        },
        {
         "type": "text",
         "id": "icon_name2",
         "label": "Add SubTitle"    
        }
        ]
      }
    ],
   "presets": [
   {
      "name": "icon with Information"
   }]
}
{% endschema %}

<style>
.icon-info{
   padding: 20px 0;
}
.icon-row{
       display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
}
.icon-row .image-box{
      max-width: 500px;
    width: 33.33%;
    margin: 50px auto 30px;
    display: flex;
    align-items: center;
    justify-content: center;
}
.image-box .icons {
   height: 80px;
    width: 80px;
  margin-right: 10px;
}
.icon-desc h6{   
    text-transform: capitalize;
    letter-spacing: 1px;
    font-size: 22px;
    margin-bottom: 0;
     font-family: 'basiccommercial_lt_boldRg';
    line-height: 25px;

}
.icon-desc span{
   font-family: 'basiccommercial_lt_romanRg';
   font-size: 20px;
}
.icon-row .image-box:last-child{
   display: none;
}
@media screen and (max-width: 991px) {
   .icon-row .image-box:last-child{
   display: flex;
}
.icon-row .image-box {
    max-width: 100%;
    width: 49.33%;}
.icon-info {
    padding: 20px 10px;
}
.icon-desc h6{
   font-size: 14px;
   line-height: 16px;
}
.icon-desc span {
    font-family: 'basiccommercial_lt_romanRg';
    font-size: 12px;
   display: block;
}
.image-box .icons {
    height: 50px;
    width: 50px;}
.icon-row .image-box{
   margin: 0 auto 15px;
}
.icon-row{
   margin-top: 30px;
}
.icon-desc{
   width: 60%;
}}
</style>