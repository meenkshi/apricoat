
 {{ 'icons-with-text.css' | asset_url | stylesheet_tag: preload: true }}
<section class="icons-with-text desktop-version"  style="background-color:{{ section.settings.bg_color}} ; ">   
     {%- if section.settings.Heading != blank -%}
   <div class="icons-content">
        <div class="icons-heading">
        <h2 style="color:{{ section.settings.f_color}}; font-size: {{ section.settings.f_size }}px;">{{ section.settings.Heading | escape }}</h2>
        <div class="desc" style="color:{{ section.settings.f_color2}} ;font-size: {{ section.settings.f_size2 }}px;">{{ section.settings.text}}<img src="{{ section.settings.star | img_url: '150x' }}"></div>
        </div>  
    </div>
     {%- endif -%}  
    {%- if section.settings.image_alignment == 'right' -%}
   <div class="icons-row">   
      <div class="icon-links">
            <ul>
                  {% for block in section.blocks %}
                     <li><img src="{{ block.settings.icon | img_url: '70x70' }}"><span style="color:{{ section.settings.f_color}} ;">{{ block.settings.icon_name }}</span></li>
                  {%- endfor -%}
            </ul>
      </div>
         {%- if section.settings.image != blank -%}
            <div class="icons-image" style="background-image: url({{section.settings.image  | img_url: '1020x' }});"></div>
         {%- endif -%}  

   </div>
     {%- endif -%}  
       {%- if section.settings.image_alignment == 'left' -%}
   <div class="icons-row image-alignment-right"> 
      {%- if section.settings.image != blank -%} 
         <div class="icons-image" style="background-image: url({{section.settings.image  | img_url: '1020x' }});"></div>
      {%- endif -%}  

      <div class="icon-links">
            <ul>
                  {% for block in section.blocks %}
                     <li><img src="{{ block.settings.icon | img_url: '70x70' }}"><span style="color:{{ section.settings.f_color}} ;">{{ block.settings.icon_name }}</span></li>
                  {%- endfor -%}
            </ul>
      </div>
     
   </div>
     {%- endif -%}  
</section>
<section class="icons-with-text mobile-version"  style="background-color:{{ section.settings.bg_color}} ; ">   
     {%- if section.settings.Heading != blank -%}
   <div class="icons-content">
        <div class="icons-heading">
        <h2 style="color:{{ section.settings.f_color}}; font-size: {{ section.settings.f_size }}px;">{{ section.settings.Heading | escape }}</h2>
        <div class="desc"  style="color:{{ section.settings.f_color2}} ;font-size: {{ section.settings.f_size2 }}px;">{{ section.settings.text}}<img src="{{ section.settings.star | img_url: '150x' }}"></div>
        </div>  
    </div>
     {%- endif -%}  
    {%- if section.settings.image_alignment == 'right' -%}
   <div class="icons-row">   
      <div class="icon-links" style="background-image: url({{section.settings.image  | img_url: '1020x' }});">
            <ul>
                  {% for block in section.blocks %}
                     <li><img src="{{ block.settings.icon | img_url: '70x70' }}"><span style="color:{{ section.settings.f_color}} ;">{{ block.settings.icon_name }}</span></li>
                  {%- endfor -%}
            </ul>
      </div>       
   </div>
     {%- endif -%}  
       {%- if section.settings.image_alignment == 'left' -%}
   <div class="icons-row image-alignment-right"> 
     

      <div class="icon-links" style="background-image: url({{section.settings.image  | img_url: '1020x' }});">
            <ul>
                  {% for block in section.blocks %}
                     <li><img src="{{ block.settings.icon | img_url: '70x70' }}"><span style="color:{{ section.settings.f_color}} ;">{{ block.settings.icon_name }}</span></li>
                  {%- endfor -%}
            </ul>
      </div>
     
   </div>
     {%- endif -%}  
</section>


<style>
.mobile-version{
   display: none;
}
.icons-content h2{

  {%- if section.settings.font_family == 'basiccommercial_lt_lightRg' -%}
      font-family: 'basiccommercial_lt_lightRg';
    {% endif %}
  {%- if section.settings.font_family == 'basiccommercial_lt_romanRg' -%}
      font-family: 'basiccommercial_lt_romanRg';
    {% endif %}
  {%- if section.settings.font_family == 'literaheavy' -%}
      font-family: 'literaheavy';
  {% endif %}
}
.icons-content .desc{
  {%- if section.settings.font_family2 == 'basiccommercial_lt_lightRg' -%}
      font-family: 'basiccommercial_lt_lightRg';
    {% endif %}
  {%- if section.settings.font_family2 == 'basiccommercial_lt_romanRg' -%}
      font-family: 'basiccommercial_lt_romanRg';
    {% endif %}
  {%- if section.settings.font_family2 == 'literaheavy' -%}
      font-family: 'literaheavy';
  {% endif %}
}
@media screen and (max-width: 991px){
.desktop-version{
   display: none;
}
.mobile-version{
   display: block;
}
}
</style>

{% schema %}
{
   "name": "Product Media Text-Icons",
   "class": "Productmedia-icons",
   "settings": [
      {
         "type": "color",
         "id": "bg_color",
         "label": "Add BackGround Color",
         "default": "#222",
         "info": "Add Section BackGround Color"
      },
       {
         "type": "color",
         "id": "f_color",
         "label": "Add Heading Font Color",
         "default": "#ddd"
      },
      {
          "type": "select",
          "id": "font_family",
          "label": "Choose Font",
          "options": [
            {
              "value": "basiccommercial_lt_lightRg",
              "label": "Basic Commercial Light"
            },
            {
              "value": "basiccommercial_lt_romanRg",
              "label": "Basic Commercial Roman"
            },
            {
              "value": "literaheavy",
              "label": "Litera"
            }
          ],
          "default": "basiccommercial_lt_lightRg"
        },
      {
         "type": "range",
         "id": "f_size",
         "default": 80,
         "min": 18,
         "max": 100,
         "unit": "px",
         "label": "Heading Font Size"
      },
      
        {
        "type": "text",
        "id": "Heading",
        "label": "Add Heading"    
        },
         {
         "type": "color",
         "id": "f_color2",
         "label": "Add Sub Heading Font Color",
         "default": "#ddd"
      },
      {
          "type": "select",
          "id": "font_family2",
          "label": "Choose Font",
          "options": [
            {
              "value": "basiccommercial_lt_lightRg",
              "label": "Basic Commercial Light"
            },
            {
              "value": "basiccommercial_lt_romanRg",
              "label": "Basic Commercial Roman"
            },
            {
              "value": "literaheavy",
              "label": "Litera"
            }
          ],
          "default": "basiccommercial_lt_lightRg"
        },
      {
         "type": "range",
         "id": "f_size2",
         "default": 80,
         "min": 18,
         "max": 100,
         "unit": "px",
         "label": "Subheading Font Size"
      },
      
        {
        "type": "text",
        "id": "text",
        "label": "Sub Heading"
      },
      {
      "type": "select",
      "id": "image_alignment",
      "label": "Image alignment",
      "options": [
         {
            "value": "left",
            "label": "Left"
         },
         {
            "value": "right",
            "label": "Right"
         }
      ],
      "default": "left"
      },
      {
        "type": "image_picker",
        "id": "star",
        "label": "Add Star Image"
        },
        {
        "type": "image_picker",
        "id": "image",
        "label": "Background Image"
        }
       
   ],
   "blocks":[
      {
        "type": "image",
        "name": "Add icon and text",
        "settings": [         
          {
        "type": "image_picker",
        "id": "icon",
        "label": "Add Icon"
        },
        {
         "type": "text",
         "id": "icon_name",
         "label": "Add Title"    
        }
        ]
      }
    ],
   "presets": [
   {
      "name": "Product Media With Text or Icons"
   }]
}
{% endschema %}